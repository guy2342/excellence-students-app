generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Student {
  id       String @id @map("_id")
  lastName String
  grade    String
  class    String
  schoolId String
}

model Teacher {
  id        String  @id @map("_id")
  firstName String
  lastName  String
  email     String
  phone     String
  username  String?
  password  String?
}

model School {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String   @unique
  address Address? // Change to Address type with a question mark to indicate at most one address
  phone   String?
}

model Address {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  city     String
  street   String
  number   Int
  schoolId String? @unique @db.ObjectId
  school   School? @relation(fields: [schoolId], references: [id])
}
