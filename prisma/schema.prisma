generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Student {
  id       String @id @map("_id")
  lastName String
  gender   Gender
  school   School @relation(fields: [schoolId], references: [id])
  grade    String
  class    String
  schoolId String
}

model Teacher {
  id                   String    @id @map("_id")
  firstName            String
  lastName             String
  email                String
  phone                String
  schoolAssocation     School    @relation(fields: [schoolId], references: [id])
  subjectsInTheProgram Subject[]
  username             String?
  password             String?
  isCoordinator        Boolean   @default(false)
  schoolId             String
}

model School {
  id      String    @id @map("_id")
  name    String
  code    String
  address String
  Teacher Teacher[]
  Student Student[]
}

model Subject {
  id        String   @id @map("_id")
  name      String
  Teacher   Teacher? @relation(fields: [teacherId], references: [id])
  teacherId String?
}

enum Gender {
  MALE
  FEMALE
}
